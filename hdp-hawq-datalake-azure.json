      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('hdpSecurityGroupName'))]"
      ],
      "copy": {
        "name": "hdpNodeNicLoop",
        "count": "[variables('TotalHDPclusterNodes')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "[ concat( 'ipconfig-', copyIndex() ) ]",
            "properties": {
              "privateIPAllocationMethod": "Static",
