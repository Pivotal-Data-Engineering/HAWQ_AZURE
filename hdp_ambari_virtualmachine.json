{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceAPIVersion": {
      "type": "string",
      "metadata": {
        "description": "version for resource"
      }
    },
    "storageAccountPrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique namespace for the Storage Account where the VM disks will be placed "
      }
    },
    "genericNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "DNS Label for the Public IP. Must be lowercase"
      }
    }
  },
  "variables": {
    "ambariStorageAccountName": "[concat(parameters('storageAccountPrefix'), '-ambari') ]",
    "vNetName": "[ concat(parameters('virtualNetworkNamePrefix'), '-1') ]",
    "subnetName": "[ concat(parameters('subnetNamePrefix'), '-1') ]",
    "ambariPublicIPName": "[ concat(parameters('genericNamePrefix'), '-publicIP') ]",
    "ambariNicName": "[ concat(parameters('NetworkInterfaceNamePrefix'), '-ambari') ]",
    "ambariVMOSDiskName": "osDiskforAmbariVM",
    "ambariVMDataDiskName": "dataDiskforAmbariVM",
    "dataDiskSize": 1023
    "ambariVMInstallScriptUri": "https://raw.githubusercontent.com/Pivotal-Data-Engineering/HAWQ_AZURE/master/Init_Ambari_Node.sh?token=AH2u3X6D62kMnIVr9RuV_nk0D6WyImLBks5YEsUrwA%3D%3D"
  },
  "resources": [
      {
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[ variables('ambariNicName') ]",
        "apiVersion": "[parameters('resourceAPIVersion')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[concat('Microsoft.Network/publicIPAddresses/', variables('ambariPublicIPName'))]",
          "[concat('Microsoft.Network/virtualNetworks/', variables('vNetName'))]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
  				"privateIPAddress": "10.0.0.1",
  				"privateIPAllocationMethod": "Static",
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('ambariPublicIPName')) ]"
                },
                "subnet": {
                  "id": "[concat(variables('vnetRef'),'/subnets/', variables('subnetName') ) ]"
                }
              }
            }
          ]
        }
     },  
	  
	  
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[ variables('ambariVMName') ]",
      "apiVersion": "[parameters('resourceAPIVersion')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[ concat( 'Microsoft.Network/networkInterfaces/', variables('nicName') ) ]",
        "[ concat( 'Microsoft.Storage/storageAccounts/', variables('ambariStorageAccountName') ) ]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize') ]"
        },
        "osProfile": {
          "computerName": "[variables('ambariVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "true",
            "ssh": {
              "publicKeys": [
                {
                  "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                  "keyData": "[parameters('adminPublicKey')]"
                }
              ]
            }
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "OpenLogic",
            "offer": "CentOS",
            "sku": "6.7",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(variables('ambariVMName'), 'osdisk')]",
            "vhd": {
              "uri": "[concat('http://',variables('ambariStorageAccountName'), '.blob.core.windows.net/',variables('ambariVMName'),'/',variables('ambariVMOSDiskName'),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "datadisk0",
              "diskSizeGB": "[variables('dataDiskSize')]",
              "lun": 0,
              "vhd": {
                "uri": "[concat('http://',variables('ambariStorageAccountName'), '.blob.core.windows.net/',variables('ambariVMName'),'/',variables('ambariVMDataDiskName'),'.vhd')]"
              },
              "caching": "None",
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName') ) ]"
            }
          ]
        }
      }
    },
	{
		"type": "Microsoft.Compute/virtualMachines/extensions",
		"name": "[concat(variables('ambariVMName'),'/installambari')]",
		"apiVersion": "[parameters('resourceAPIVersion')]",
		"location": "[parameters('location')]",
		"dependsOn": [
			 "[concat('Microsoft.Compute/virtualMachines/', variables('ambariVMName'))]"
		],
		 "properties": {
		        "publisher": "Microsoft.OSTCExtensions",
		         "type": "CustomScriptForLinux",
		         "typeHandlerVersion": "1.2",
		         "settings": {
		            "fileUris": [
		                "[variables('ambariVMInstallScriptUri')]"
		            ],
		            "commandToExecute": "sh Init_Ambari_Node.sh"
		         }
		 }
	}	 
  ],
  "output": {}
}